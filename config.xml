    <plugin name="cordova-plugin-chrome-apps-power" spec="~1.0.4" />
    <plugin name="de.codevise.cordova.volume" spec="https://github.com/whitmer/cordova-volume.git" />
    <plugin name="cordova-plugin-battery-status" spec="~1.1.1" />
    <plugin name="cordova-plugin-media-capture" spec="~1.2.0" />
    <plugin name="cordova-plugin-keyboard" spec="~1.1.3" />
    <plugin name="com.mycoughdrop.coughdrop.extra-tts" />
    <plugin name="com.mycoughdrop.coughdrop.misc" />
